<Window x:Class="ChatBuddyWPF.CreateChat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Chat" Height="160" Width="300" Icon="/Download.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Enter Chat Name:" Margin="10"/>
        <TextBox x:Name="ChatNameTextBox" Margin="10" Grid.Row="1"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" Margin="10">
            <Button Content="OK" Width="75" Margin="5" Click="OKButton_Click" Style="{StaticResource CustomButtonStyle}"/>
            <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click" Style="{StaticResource CustomButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>